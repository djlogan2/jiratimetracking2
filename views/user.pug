extends layout
block content
    h1= user
    div(class='grid')
        div(class='jira')
            p User selection
            form(action = `/${user}/updateusers`, method="POST")
                table
                    each userelem in users
                        tr
                            td
                                input(type='checkbox' name=userelem.id checked=userelem.assigned)
                            td #{userelem.name}
                br
                button(type = "submit") Update Jira Users
        div(class='timesheet')
            p Timesheet
            table(class='tstable')
                tr
                    th Name
                    th(class='tdhour') Mon
                    th(class='tdhour') Tue
                    th(class='tdhour') Wed
                    th(class='tdhour') Thu
                    th(class='tdhour') Fri
                    th(class='tdhour') Sat
                    th(class='tdhour') Sun
                each hours,name in projects
                    tr
                        td= name
                        each hour in hours
                            td(class='tdhour')= hour.toFixed(2)
